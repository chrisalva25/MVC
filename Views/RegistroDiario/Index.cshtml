@model List<RegistroDiarioViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Registros Diarios</h1>

    <form asp-action="Insertar" method="get">

        <div class="form-group">
            <input type="submit" value="Agregar" class="btn-success" />
        </div>

    </form>

    @if (Model.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Taxi</th>
                    <th>Total Día</th>
                    <th>Combustible</th>
                    <th>Pago Base</th>
                    <th>Pago Conductor</th>
                    <th>Pago Dueño</th>
                    <th>Gastos</th>
                    <th>Observaciones</th>
                    <th>Fecha</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var registro in Model)
                {
                    <tr>
                        <td>@registro.Id</td>
                        <td>@registro.Taxi.Placa</td>
                        <td>@registro.TotalDia</td>
                        <td>@registro.Combustible</td>
                        <td>@registro.PagoBase</td>
                        <td>@registro.PagoConductor</td>
                        <td>@registro.PagoDueño</td>
                        <td>@registro.Gastos</td>
                        <td>@registro.Observacion</td>
                        <td>@registro.Fecha</td>
                        <td>
                            @Html.ActionLink("Editar","Editar","RegistroDiario", new {@RegistroId = registro.Id}, new {@class="btn btn-info"})
                            @Html.ActionLink("Eliminar","Eliminar","RegistroDiario", new {@RegistroId = registro.Id}, new {@class="btn btn-info"})
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="container text-center">
            <p>No hay registros en la base de datos</p>
        </div>
    }
</div>

