@model List<TaxiViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Taxis</h1>

    <form asp-action="Insertar" method="get">

        <div class="form-group">
            <input type="submit" value="Agregar" class="btn-success" />
        </div>

    </form>

    @if (Model.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Placa</th>
                    <th>Observación</th>
                    <th>Usuario</th>
                    <th>Accciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var taxi in Model)
                {
                    <tr>
                        <td>@taxi.Id</td>
                        <td>@taxi.Placa</td>
                        <td>@taxi.Observacion</td>
                        <td>@taxi.Usuario</td>
                        <td>
                            @Html.ActionLink("Editar","Editar","Taxis", new {@TaxiId = taxi.Id}, new {@class="btn btn-info"})
                            @Html.ActionLink("Eliminar","Eliminar","Taxis", new {@TaxiId = taxi.Id}, new {@class="btn btn-info"})
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="container text-center">
            <p>No hay registros de taxi en la base de datos</p>
        </div>
    }


</div>

